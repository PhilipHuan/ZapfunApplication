<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyMenuFragment">

    <TextView
        android:id="@+id/lblAddress"
        android:layout_width="154dp"
        android:layout_height="24dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:text="@string/LocationAddress"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/lblDelivery"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblConfirmRice"
        android:layout_width="226dp"
        android:layout_height="22dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        android:text="@string/ConfirmRice"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lblRiceType"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/Line1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDelivery" />

    <TextView
        android:id="@+id/lblRiceType"
        android:layout_width="128dp"
        android:layout_height="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="124dp"
        android:text="@string/RiceType"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblDelivery"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="@string/DeliveryLocation"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgPinLocation"
        app:layout_constraintStart_toStartOf="@+id/imgPinLocation"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBurgerMenu"
        android:layout_width="29dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_iconfinder_menu_alt_134216"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/lblAddress"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtSearchFood"
        android:layout_width="364dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_bg"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawablePadding="16sp"
        android:ems="10"
        android:hint="Search food you like"
        android:inputType="textPersonName"
        android:paddingStart="16sp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/lblRiceType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Line1" />

    <ImageView
        android:id="@+id/imgPinLocation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="352dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="29dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblRiceType">

        <RadioButton
            android:id="@+id/rbNone"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="None" />

        <RadioButton
            android:id="@+id/rbLess"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:text="Less" />

        <RadioButton
            android:id="@+id/rbNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Normal" />

        <RadioButton
            android:id="@+id/rbExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Extra" />
    </RadioGroup>

    <View
        android:id="@+id/Line2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="535dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>